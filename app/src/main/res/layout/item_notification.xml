<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/notification_fragment_item_parent_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/notification_fragment_item_cv"
        android:layout_margin="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp">
        <LinearLayout
            android:id="@+id/notification_fragment_item_child_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/notification_fragment_item_iv_notify"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/ic_notifications_black_24dp"/>
            <TextView
                android:id="@+id/notification_fragment_item_tv_notify"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification about"
                android:textSize="@dimen/_13sdp"/>
            <ImageView
                android:id="@+id/notification_fragment_item_iv_time"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_schedule_black_24dp"/>
            <TextView
                android:id="@+id/notification_fragment_item_tv_time"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sun:29/11/2010"
                android:textSize="@dimen/_13sdp"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
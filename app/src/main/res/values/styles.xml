<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>


    </style>
    <!--  TextViews styles-->
    <style name="MyEditTextStyle" parent="android:Widget.EditText">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:background">@drawable/text_rectangle</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:layout_margin">15dp</item>

        <item name="android:textSize">16sp</item>
    </style>

    <style name="myTabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
    </style>

<!--    donation text view style-->

    <style name="donation_text_view">

        <item name="android:layout_marginStart">@dimen/dim_55dp</item>
        <item name="android:layout_marginEnd">@dimen/dim_40dp</item>
        <item name="android:layout_marginTop">@dimen/dim_4dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">#E04F5F</item>
        <item name="android:textSize">@dimen/dim_14sp</item>
    </style>

    <style name="error_appearance">this field is required</style>

    <style name="text_input">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="spinner">

    </style>



</resources>
